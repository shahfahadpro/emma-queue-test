generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ComputeJob {
  id        String   @id @default(cuid())
  numberA   Float
  numberB   Float
  status    String   @default("PENDING")
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  results   ComputeResult[]
}

model ComputeResult {
  id          String   @id @default(cuid())
  jobId       String
  job         ComputeJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  operation   String
  result      Float?
  error       String?
  completedAt DateTime?
  createdAt   DateTime @default(now())
}

